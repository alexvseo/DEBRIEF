# ==================== Backend env.example ====================
# Copie para backend/.env antes de iniciar os serviços.

# -------- Ambiente --------
APP_NAME=DeBrief API
APP_VERSION=1.1.0
ENVIRONMENT=development  # altere para production em deploys
DEBUG=false
HOST=0.0.0.0
PORT=8000

# -------- Banco de Dados --------
DATABASE_URL=postgresql://postgres:postgres@debrief_db:5432/dbrief
DATABASE_ECHO=false

# -------- Autenticação --------
SECRET_KEY=change-me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# -------- CORS --------
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
FRONTEND_URL=http://localhost:5173

# -------- Uploads --------
MAX_FILE_SIZE=52428800
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png
MAX_FILES_PER_DEMANDA=5
UPLOAD_DIR=uploads
ANTIVIRUS_ENABLED=false
ANTIVIRUS_COMMAND=clamscan --no-summary --stdout

# -------- Integrações --------
TRELLO_API_KEY=
TRELLO_TOKEN=
TRELLO_BOARD_ID=
TRELLO_LIST_ID=

ZAPI_INSTANCE_ID=
ZAPI_TOKEN=
ZAPI_CLIENT_TOKEN=
ZAPI_PHONE_NUMBER=
WHATSAPP_API_URL=http://localhost:21465
WHATSAPP_API_KEY=
WPP_URL=
WPP_INSTANCE=
WPP_TOKEN=

# -------- Segurança --------
ENCRYPTION_KEY=
RECAPTCHA_SECRET_KEY=
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=5/minute
RATE_LIMIT_UPLOAD=10/minute
RATE_LIMIT_REPORTS=20/minute
RATE_LIMIT_STORAGE_URI=memory://
AUTH_MAX_FAILED_ATTEMPTS=5
AUTH_LOCKOUT_MINUTES=15
MFA_ISSUER=DeBrief
MFA_TOTP_WINDOW=1
RECAPTCHA_REQUIRE_ON_LOGIN=false
RECAPTCHA_REQUIRE_ON_REGISTER=false
CSRF_ENABLED=true
CSRF_TOKEN_EXPIRE_SECONDS=3600

# -------- Email --------
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=
EMAILS_FROM_NAME=

