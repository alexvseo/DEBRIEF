# ==================== Docker Compose env.example ====================
# 1. Copie para .env (git-ignored)
# 2. Ajuste as variáveis antes do deploy

# -------- Banco de Dados --------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me
POSTGRES_DB=dbrief

# -------- Usuário de aplicação (mínimo privilégio) --------
APP_DB_USER=debrief_app
APP_DB_PASSWORD=change-me

# -------- Backend --------
DATABASE_URL=postgresql://${APP_DB_USER}:${APP_DB_PASSWORD}@debrief_db:5432/${POSTGRES_DB}
SECRET_KEY=change-me
FRONTEND_URL=https://debrief.example.com

# -------- Integrações --------
TRELLO_API_KEY=
TRELLO_TOKEN=
TRELLO_BOARD_ID=
TRELLO_LIST_ID=
WHATSAPP_API_URL=http://localhost:21465
WHATSAPP_API_KEY=
ZAPI_INSTANCE_ID=
ZAPI_TOKEN=
ZAPI_CLIENT_TOKEN=
ZAPI_PHONE_NUMBER=

# -------- Segurança --------
ENCRYPTION_KEY=

# -------- Provider de Segredos --------
# Valores: file (default) | doppler
DEBRIEF_SECRETS_PROVIDER=file
DEBRIEF_SECRETS_FILE=./backend/.env

