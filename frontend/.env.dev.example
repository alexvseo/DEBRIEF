# ========================================
# VARIÁVEIS DE AMBIENTE - FRONTEND DEV LOCAL
# ========================================
# Copie este arquivo para .env.dev e ajuste se necessário
# Comando: cp .env.dev.example .env.dev

# URL da API Backend - Backend local
VITE_API_URL=http://localhost:8000/api

# Ambiente da aplicação
VITE_ENV=development

# Habilitar modo debug
VITE_DEBUG_MODE=true

# Configurações de Upload
VITE_MAX_FILE_SIZE=52428800
VITE_ALLOWED_FILE_TYPES=.pdf,.jpg,.jpeg,.png
VITE_MAX_FILES_PER_UPLOAD=5

# Timeout para requisições HTTP (em milissegundos)
VITE_API_TIMEOUT=30000

# URL base da aplicação
VITE_APP_URL=http://localhost:5173
